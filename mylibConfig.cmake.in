	add_definitions(
		-DUSE_FREEGLUT
	)
	add_definitions(
		-DFREEGLUT_LIB_PRAGMAS=0
	)
	if( WITH_STATIC_LINK )
		add_definitions(
			-DFREEGLUT_STATIC
		)	
	endif()
endif() 

