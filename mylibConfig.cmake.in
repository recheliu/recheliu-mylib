	add_definitions(
		-DWITH_OPENCV
	)
endif() 

set(WITH_STATIC_LINK	@WITH_STATIC_LINK@)
if( WITH_STATIC_LINK ) 
	add_definitions(
		-DWITH_STATIC_LINK
	)
endif() 

set(WITH_FREEGLUT		@FREEGLUT@)
